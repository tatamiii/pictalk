<div class="post">
  <% @post.each do |post| %>
    <%= link_to '削除', post_path(post.id), method: :delete %>
    <div class="one_post">
      <div class="post_name">
        <%= post.name %>
      </div>
      <div class="post_text">
        <p><%= post.text %></p>
      </div>
      <%= image_tag post.image.variant(resize:'500x500') if post.image.attached? %>
    </div>
  <% end %>
</div>